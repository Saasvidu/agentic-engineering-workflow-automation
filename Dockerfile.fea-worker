FROM python:3.11-slim

RUN rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Copy shared schema (if needed by fea-worker)
COPY shared /app/shared

# Copy service files
COPY services/fea-worker /app

# Create virtual environment and sync dependencies from pyproject.toml
RUN uv sync

# Create jobs directory for runtime job storage
RUN mkdir -p /app/jobs

# Expose health check port (Azure Container Apps uses 8080 by default)
EXPOSE 8080

# Set Python to unbuffered mode for better logging in containers
ENV PYTHONUNBUFFERED=1

# Run the worker using the virtual environment
# All configuration is done via environment variables
# Use relative path for consistency with other Dockerfiles
CMD [".venv/bin/python", "fea_worker.py"]