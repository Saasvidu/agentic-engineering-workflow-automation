FROM python:3.11-slim

RUN apt-get update && apt-get install -y docker.io && rm -rf /var/lib/apt/lists/*

# Install uv
COPY --from=ghcr.io/astral-sh/uv:latest /uv /usr/local/bin/uv

WORKDIR /app

# Copy shared schema (if needed by fea-worker)
COPY shared /app/shared

# Copy service files
COPY services/fea-worker /app

# Create virtual environment and sync dependencies from pyproject.toml
RUN uv sync

# Create jobs directory for runtime job storage
RUN mkdir -p /app/jobs

# Run the worker using the virtual environment
# All configuration is done via environment variables in .env file
# Use uv to run the script, ensuring the virtualenv is active
CMD ["/app/.venv/bin/python", "fea_worker.py"]